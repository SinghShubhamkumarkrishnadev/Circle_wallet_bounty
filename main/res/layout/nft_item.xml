<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="720dp"
    android:padding="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewNFT"
        android:layout_width="match_parent"
        android:layout_height="429dp"
        android:background="@color/black"
        android:scaleType="centerCrop"
        android:src="@drawable/MyNFTtokenBatch" />

    <TextView
        android:id="@+id/textViewNFTName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MY NFT"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textViewNFTDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My New NFT Token Batch for Navigaying W3 With DefiChain "
        android:textSize="16sp"
        android:layout_marginTop="4dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddNFT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="130dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Add NFT"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="6dp"/>

</LinearLayout>
